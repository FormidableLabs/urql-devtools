{
  "name": "@urql/devtools-chrome-extension",
  "version": "0.0.4",
  "description": "The Urql devtools chrome extension",
  "scripts": {
    "start": "webpack --watch",
    "build": "NODE_ENV=\"production\" webpack",
    "bundle": "cd dist && bestzip ../extension.zip *",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest",
    "coverage": "jest --coverage",
    "prettier-check": "prettier -c src/** README.md",
    "prepublishOnly": "run-s lint build"
  },
  "author": "Formidable",
  "license": "MIT",
  "repository": "https://www.github.com/FormidableLabs/urql-devtools",
  "bugs": {
    "url": "https://github.com/FormidableLabs/urql-devtools/issues"
  },
  "homepage": "https://www.github.com/FormidableLabs/urql-devtools",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(src/.*(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ]
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "bestzip": "^2.1.4",
    "fast-json-stable-stringify": "^2.0.0",
    "nanoid": "^2.1.0",
    "wonka": "^3.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.86",
    "@types/codemirror": "0.0.76",
    "@types/fast-json-stable-stringify": "^2.0.0",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-json-tree": "^0.6.11",
    "@types/react-router": "^5.0.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "@urql/devtools": "0.1.0-beta.0",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "codemirror": "^5.48.0",
    "codemirror-graphql": "^0.8.3",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "csstype": "^2.6.5",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^5.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-react": "^7.14.2",
    "event-hooks-webpack-plugin": "^2.1.2",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-codemirror2": "^6.0.0",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-spring": "^8.0.27",
    "style-loader": "^0.23.1",
    "styled-components": "^4.3.2",
    "terser-webpack-plugin": "^1.4.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "urql": "^1.4.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "urql": ">= 1.2.0"
  }
}
